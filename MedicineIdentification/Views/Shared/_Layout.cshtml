<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedicineIdentification</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicineIdentification.styles.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3 ms-auto me-auto fixed-top M_Nav">
            <div class="container-fluid">
                <!-- Logo and text in navbar -->
                <a class="navbar-brand ps-5" asp-area="" asp-controller="Medicine" asp-action="Index">
                    <img src="~/Proj_Images/Proj_Logo/download.svg" alt="Logo" class="logo-zoom">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto px-5">
                        <li class="nav-item px-4">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Medicine" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item px-4">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Medicine" asp-action="Input">Identify</a>
                        </li>
                        <li class="nav-item px-4">
                            <a class="nav-link text-dark" href="#Feature_wrapper">Features</a>
                        </li>
                        <li class="nav-item px-4">
                            <a class="nav-link text-dark" href="#about_wrapper">Medicine</a>
                        </li>
                        <li class="nav-item px-4">
                            <a class="nav-link text-dark" href="#about_wrapper">About Us</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark" href="#Contact_wrapper">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pt-3 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
